<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>Demo React JS</title>
  <script src="https://unpkg.com/react@15/dist/react.js"></script>
  <script src="https://unpkg.com/react-dom@15/dist/react-dom.js"></script>
  <script src="https://unpkg.com/babel-core@5.8.38/browser.min.js"></script>
</head>
<body>
  <div id="root"></div>
  <script type="text/babel">
  var Car = React.createClass({
    propTypes: {
      carName: React.PropTypes.string,
      manufacturer: React.PropTypes.string,
      price: React.PropTypes.string
    },
    defaultProps: {
      carName: "",
      manufacturer: "",
      price: ""
    },
    render: function() {
      return (
        <div>
        <h1>{props.carName}</h1>
        <p>Manufacturer: {props.manufacturer}</p>
        <p>Price: {props.price} USD</p>
        </div>
      )
    }
  });

  function NameCard(props) {
    return (
      <div>
      <h1>{props.fullName}</h1>
      <p>Phone: {props.phone}</p>
      <p>Email: {props.email}</p>
      </div>
    );
  }
  ReactDOM.render(
    <NameCard fullName="Duc" phone="113" email="duc@gmail.com" />,
    document.getElementById('root')
  );
  ReactDOM.render(
    <Car carName="Honda City" manufacturer="Honda" price="10000" />,
    document.getElementById('root')
  );
  </script>
</body>
</html>
